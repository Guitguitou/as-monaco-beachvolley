<div class="space-y-6">
  <!-- Tableau des coachs -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
    <div class="px-4 py-3 border-b border-gray-200">
      <h3 class="text-lg font-semibold text-gray-900">Récapitulatif par coach</h3>
    </div>
    
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Coach</th>
            <th class="px-4 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Sessions</th>
            <th class="px-4 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Heures</th>
            <th class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Semaine (€)</th>
            <th class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Mois (€)</th>
            <th class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Année (€)</th>
            <th class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">€/session</th>
            <th class="px-4 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Prochaines</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% if coach_breakdown.any? %>
            <% coach_breakdown.each do |coach_data| %>
              <tr class="hover:bg-gray-50">
                <td class="px-4 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <div class="flex-shrink-0 h-8 w-8">
                      <div class="h-8 w-8 rounded-full bg-asmbv-red flex items-center justify-center">
                        <span class="text-sm font-medium text-white">
                          <%= coach_data[:user]&.first_name&.first&.upcase %>
                        </span>
                      </div>
                    </div>
                    <div class="ml-4">
                      <div class="text-sm font-medium text-gray-900">
                        <%= link_to coach_data[:user]&.full_name, admin_user_path(coach_data[:user]), class: "text-asmbv-red hover:underline" %>
                      </div>
                      <div class="text-sm text-gray-500">
                        <%= coach_data[:user]&.email %>
                      </div>
                    </div>
                  </div>
                </td>
                <td class="px-4 py-4 whitespace-nowrap text-center">
                  <div class="text-sm text-gray-900">
                    <div class="font-medium"><%= coach_data[:month_count] %></div>
                    <div class="text-xs text-gray-500">ce mois</div>
                  </div>
                </td>
                <td class="px-4 py-4 whitespace-nowrap text-center">
                  <div class="text-sm text-gray-900">
                    <div class="font-medium"><%= number_with_precision(total_hours_for_coach(coach_data, :month), precision: 1) %>h</div>
                    <div class="text-xs text-gray-500">ce mois</div>
                  </div>
                </td>
                <td class="px-4 py-4 whitespace-nowrap text-right text-sm text-gray-900">
                  <%= format_currency(coach_data[:week_amount]) %>
                </td>
                <td class="px-4 py-4 whitespace-nowrap text-right text-sm font-bold text-gray-900">
                  <%= link_to format_currency(coach_data[:month_amount]), 
                      admin_sessions_path(coach_id: coach_data[:user]&.id, period: 'month'),
                      class: "text-asmbv-red hover:underline" %>
                </td>
                <td class="px-4 py-4 whitespace-nowrap text-right text-sm text-gray-900">
                  <%= format_currency(coach_data[:year_amount]) %>
                </td>
                <td class="px-4 py-4 whitespace-nowrap text-right text-sm text-gray-900">
                  <%= format_currency(average_per_session(coach_data, :month)) %>
                </td>
                <td class="px-4 py-4 whitespace-nowrap text-center">
                  <% upcoming = upcoming_sessions_for_coach(coach_data[:user]) %>
                  <% if upcoming.any? %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                      <%= upcoming.count %>
                    </span>
                  <% else %>
                    <span class="text-xs text-gray-500">-</span>
                  <% end %>
                </td>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="8" class="px-4 py-8 text-center text-sm text-gray-500">
                Aucun coach trouvé.
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Détail des prochaines sessions par coach -->
  <% if coach_breakdown.any? %>
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <% coach_breakdown.first(4).each do |coach_data| %>
        <% upcoming = upcoming_sessions_for_coach(coach_data[:user]) %>
        <% if upcoming.any? %>
          <div class="bg-white rounded-lg shadow-sm border border-gray-200">
            <div class="px-4 py-3 border-b border-gray-200">
              <h4 class="text-lg font-semibold text-gray-900">
                <%= coach_data[:user]&.full_name %> - Prochaines sessions
              </h4>
            </div>
            <div class="p-4">
              <div class="space-y-3">
                <% upcoming.each do |session| %>
                  <div class="flex items-center justify-between py-2 border-b border-gray-100 last:border-b-0">
                    <div class="flex-1">
                      <p class="text-sm font-medium text-gray-900"><%= session.title %></p>
                      <p class="text-xs text-gray-500">
                        <%= l(session.start_at, format: :short) %> - <%= session.terrain %>
                      </p>
                    </div>
                    <div class="text-right">
                      <p class="text-sm text-gray-900">
                        <%= session.registrations.confirmed.count %>/<%= session.max_players || '∞' %>
                      </p>
                      <p class="text-xs text-gray-500">places</p>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>
