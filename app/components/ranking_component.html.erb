<div class="bg-white rounded-lg border border-gray-200 p-6 shadow-sm">
  <% if title %>
    <h4 class="text-sm font-medium text-gray-700 mb-4"><%= title %></h4>
  <% end %>

  <% if has_players? %>
    <div class="space-y-2">
      <% players.each do |player| %>
        <div class="flex items-center justify-between py-2 px-3 rounded-md hover:bg-gray-50 transition-colors">
          <div class="flex items-center gap-3 flex-1 min-w-0">
            <div class="flex-shrink-0 w-8 h-8 rounded-full bg-gray-100 flex items-center justify-center">
              <span class="text-xs font-bold text-gray-600"><%= player[:rank] %></span>
            </div>
            <div class="flex-1 min-w-0">
              <p class="text-sm font-medium text-gray-900 truncate" title="<%= player[:name] %>">
                <%= player[:name] %>
              </p>
            </div>
          </div>
          <div class="flex-shrink-0 ml-4">
            <% if player[:count] %>
              <span class="text-sm font-semibold text-gray-700">
                <%= pluralize(player[:count], "session") %>
              </span>
            <% elsif player[:days_since] %>
              <span class="text-sm text-gray-600">
                Il y a <%= pluralize(player[:days_since], "jour") %>
              </span>
            <% elsif player[:last_session_at].nil? %>
              <span class="text-sm text-gray-500 italic">Jamais joué</span>
            <% elsif player[:last_session_at] %>
              <span class="text-xs text-gray-500">
                <%= player[:last_session_at].in_time_zone("Europe/Paris").strftime("%d/%m/%Y") %>
              </span>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-8">
      <p class="text-gray-400 italic">Aucune donnée</p>
    </div>
  <% end %>
</div>

