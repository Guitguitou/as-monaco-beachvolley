<%# Affiche le bloc d'erreurs de validation (DRY). Utilise I18n errors.messages.not_saved (Devise). %>
<% if object.present? && object.errors.any? %>
  <div class="rounded-md bg-red-50 border border-red-200 p-4 mb-6" role="alert" data-turbo-cache="false">
    <h3 class="text-sm font-medium text-red-800">
      <%= t("errors.messages.not_saved", count: object.errors.count, resource: object.class.model_name.human.downcase) %>
    </h3>
    <ul class="mt-2 list-disc list-inside text-sm text-red-700 space-y-1">
      <% object.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
