<div class="flex items-center justify-between mb-6 flex-col gap-3 sm:flex-row sm:gap-0">
  <h1 class="text-2xl font-bold flex items-center gap-2 text-gray-900">
    <%= lucide_icon("package") %> Packs disponibles
  </h1>
</div>

<%# Solde actuel %>
<div class="bg-gradient-to-r from-asmbv-red to-asmbv-red-dark rounded-xl shadow-lg p-6 mb-8">
  <div class="flex items-center gap-4">
    <div class="p-4 bg-white/20 rounded-lg">
      <%= lucide_icon("wallet", size: 32) %>
    </div>
    <div>
      <p class="text-sm uppercase tracking-wide opacity-90">Votre solde actuel</p>
      <p class="text-4xl font-bold text-asmbv-red"><%= @current_balance %> <span class="text-xl font-normal">crédits</span></p>
    </div>
  </div>
</div>

<%# Packs de crédits %>
<% if @credits_packs.any? %>
  <div class="mb-12">
    <h2 class="text-xl font-bold text-gray-900 mb-6 flex items-center gap-2">
      <%= lucide_icon("coins", size: 24, class: "text-asmbv-red") %>
      Packs de crédits
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
      <% @credits_packs.each do |pack| %>
        <div class="bg-white rounded-lg border border-gray-200 shadow-sm hover:shadow-md transition-shadow overflow-hidden flex flex-col">
          <%# Header épuré %>
          <div class="p-4 border-b border-gray-100">
            <div class="flex items-start justify-between mb-3">
              <div>
                <h3 class="text-lg font-semibold text-gray-900"><%= pack.name %></h3>
                <% if pack.description.present? %>
                  <p class="text-sm text-gray-600 mt-1"><%= pack.description %></p>
                <% end %>
              </div>
              <%= lucide_icon("coins", size: 24, class: "text-gray-400") %>
            </div>
            <div class="flex items-baseline gap-1">
              <span class="text-2xl font-bold text-gray-900"><%= pack.amount_eur.to_i %></span>
              <span class="text-lg text-gray-600">€</span>
              <% if pack.amount_eur != pack.amount_eur.to_i %>
                <span class="text-sm text-gray-500"><%= sprintf("%.2f", pack.amount_eur).split('.')[1] %></span>
              <% end %>
            </div>
          </div>

          <%# Content %>
          <div class="flex-1 p-4 flex flex-col">
            <%# Crédits %>
            <div class="flex items-center justify-between mb-3 pb-3 border-b border-gray-100">
              <div class="flex items-center gap-2 text-gray-600">
                <%= lucide_icon("coins", size: 16, class: "text-gray-500") %>
                <span class="text-sm font-medium">Crédits</span>
              </div>
              <span class="text-lg font-bold text-gray-900"><%= pack.credits %></span>
            </div>

            <%# Taux de conversion %>
            <div class="flex items-center gap-2 text-xs text-gray-500 mb-4">
              <%= lucide_icon("trending-up", size: 14, class: "text-green-600") %>
              <span><%= pack.credits_per_euro.round %> crédits/€</span>
              <% bonus = ((pack.credits.to_f / pack.amount_eur - 100) / 100 * 100).round %>
              <% if bonus > 0 %>
                <span class="inline-flex items-center gap-1 px-1.5 py-0.5 rounded-full bg-green-100 text-green-700 text-xs font-medium">
                  +<%= bonus %>%
                </span>
              <% end %>
            </div>

            <%# Bouton d'achat %>
            <%= button_to buy_pack_path(pack),
                  method: :post,
                  class: "w-full inline-flex items-center justify-center gap-2 rounded-md bg-asmbv-red px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-asmbv-red-dark focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-asmbv-red transition-all mt-auto",
                  data: { turbo: false } do %>
              <%= lucide_icon("shopping-cart", size: 16) %>
              Acheter
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>

<%# Stages disponibles %>
<% if @stages.any? %>
  <div class="mb-12">
    <h2 class="text-xl font-bold text-gray-900 mb-6 flex items-center gap-2">
      <%= lucide_icon("calendar", size: 24, class: "text-blue-600") %>
      Stages disponibles
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
      <% @stages.each do |stage| %>
        <div class="bg-white rounded-lg border border-gray-200 shadow-sm hover:shadow-md transition-shadow overflow-hidden flex flex-col">
          <%# Header épuré %>
          <div class="p-4 border-b border-gray-100">
            <div class="flex items-start justify-between mb-3">
              <div>
                <h3 class="text-lg font-semibold text-gray-900"><%= stage.title %></h3>
                <% if stage.description.present? %>
                  <p class="text-sm text-gray-600 mt-1"><%= stage.description %></p>
                <% end %>
              </div>
              <%= lucide_icon("calendar", size: 24, class: "text-gray-400") %>
            </div>
            <div class="flex items-baseline gap-1">
              <span class="text-2xl font-bold text-gray-900"><%= stage.price.to_i %></span>
              <span class="text-lg text-gray-600">€</span>
              <% if stage.price != stage.price.to_i %>
                <span class="text-sm text-gray-500"><%= sprintf("%.2f", stage.price).split('.')[1] %></span>
              <% end %>
            </div>
          </div>

          <%# Content %>
          <div class="flex-1 p-4 flex flex-col">
            <%# Dates du stage %>
            <div class="flex items-center justify-between mb-3 pb-3 border-b border-gray-100">
              <div class="flex items-center gap-2 text-gray-600">
                <%= lucide_icon("calendar-days", size: 16, class: "text-gray-500") %>
                <span class="text-sm font-medium">Dates</span>
              </div>
              <span class="text-xs text-gray-500">
                <%= stage.starts_on.strftime("%d/%m") %> - <%= stage.ends_on.strftime("%d/%m") %>
              </span>
            </div>

            <%# Durée du stage %>
            <div class="flex items-center gap-2 text-xs text-gray-500 mb-4">
              <%= lucide_icon("clock", size: 14, class: "text-gray-400") %>
              <span><%= (stage.ends_on - stage.starts_on + 1).to_i %> jour(s)</span>
            </div>

            <%# Boutons d'action %>
            <div class="flex flex-col gap-2 mt-auto">
              <%= link_to stage_path(stage),
                    class: "w-full inline-flex items-center justify-center gap-2 rounded-md bg-gray-100 px-4 py-2 text-sm font-semibold text-gray-700 shadow-sm hover:bg-gray-200 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-gray-500 transition-all" do %>
                <%= lucide_icon("info", size: 16) %>
                Détails
              <% end %>
              
              <% if stage.current_or_upcoming? %>
                <%= link_to "#",
                      class: "w-full inline-flex items-center justify-center gap-2 rounded-md bg-asmbv-red px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-asmbv-red-dark focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-asmbv-red transition-all" do %>
                  <%= lucide_icon("user-plus", size: 16) %>
                  S'inscrire
                <% end %>
              <% else %>
                <div class="w-full inline-flex items-center justify-center gap-2 rounded-md bg-gray-300 px-4 py-2 text-sm font-semibold text-gray-500 cursor-not-allowed">
                  <%= lucide_icon("calendar-x", size: 16) %>
                  Terminé
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>

<%# Packs de licence %>
<% if @licence_packs.any? %>
  <div class="mb-12">
    <h2 class="text-xl font-bold text-gray-900 mb-6 flex items-center gap-2">
      <%= lucide_icon("award", size: 24, class: "text-green-600") %>
      Packs de licence
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
      <% @licence_packs.each do |pack| %>
        <div class="bg-white rounded-lg border border-gray-200 shadow-sm hover:shadow-md transition-shadow overflow-hidden flex flex-col">
          <%# Header épuré %>
          <div class="p-4 border-b border-gray-100">
            <div class="flex items-start justify-between mb-3">
              <div>
                <h3 class="text-lg font-semibold text-gray-900"><%= pack.name %></h3>
                <% if pack.description.present? %>
                  <p class="text-sm text-gray-600 mt-1"><%= pack.description %></p>
                <% end %>
              </div>
              <%= lucide_icon("award", size: 24, class: "text-gray-400") %>
            </div>
            <div class="flex items-baseline gap-1">
              <span class="text-2xl font-bold text-gray-900"><%= pack.amount_eur.to_i %></span>
              <span class="text-lg text-gray-600">€</span>
              <% if pack.amount_eur != pack.amount_eur.to_i %>
                <span class="text-sm text-gray-500"><%= sprintf("%.2f", pack.amount_eur).split('.')[1] %></span>
              <% end %>
            </div>
          </div>

          <%# Content %>
          <div class="flex-1 p-4 flex flex-col">
            <%# Licence info %>
            <div class="flex items-center justify-between mb-3 pb-3 border-b border-gray-100">
              <div class="flex items-center gap-2 text-gray-600">
                <%= lucide_icon("award", size: 16, class: "text-gray-500") %>
                <span class="text-sm font-medium">Licence</span>
              </div>
              <span class="text-sm font-bold text-gray-900">Annuelle</span>
            </div>

            <%# Description %>
            <div class="flex items-center gap-2 text-xs text-gray-500 mb-4">
              <%= lucide_icon("info", size: 14, class: "text-gray-400") %>
              <span>Accès complet à toutes les fonctionnalités</span>
            </div>

            <%# Bouton d'achat %>
            <%= button_to buy_pack_path(pack),
                  method: :post,
                  class: "w-full inline-flex items-center justify-center gap-2 rounded-md bg-asmbv-red px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-asmbv-red-dark focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-asmbv-red transition-all mt-auto",
                  data: { turbo: false } do %>
              <%= lucide_icon("shopping-cart", size: 16) %>
              Acheter
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>

<%# Message si aucun pack ni stage %>
<% if @credits_packs.empty? && @licence_packs.empty? && @stages.empty? %>
  <div class="text-center py-16 bg-white rounded-xl border border-gray-200 shadow-sm">
    <div class="flex flex-col items-center gap-4">
      <%= lucide_icon("package", size: 64, class: "text-gray-300") %>
      <div>
        <p class="text-xl font-semibold text-gray-900 mb-2">Aucun pack ou stage disponible</p>
        <p class="text-gray-500">Les packs et stages seront bientôt disponibles.</p>
      </div>
    </div>
  </div>
<% end %>
