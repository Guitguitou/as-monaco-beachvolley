<div class="container mx-auto px-4 py-8">
  <div class="max-w-2xl mx-auto">
    <div class="mb-6">
      <h1 class="text-3xl font-bold text-gray-900">Nouveau Forfait de Crédits</h1>
      <p class="text-gray-600 mt-2">Créez un nouveau forfait que les joueurs pourront acheter</p>
    </div>

    <%= form_with model: [:admin, @credit_package], local: true, class: "space-y-6" do |form| %>
      <% if @credit_package.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-md p-4">
          <div class="flex">
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">
                <%= pluralize(@credit_package.errors.count, "erreur") %> empêche(nt) la sauvegarde :
              </h3>
              <div class="mt-2 text-sm text-red-700">
                <ul class="list-disc pl-5 space-y-1">
                  <% @credit_package.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <div>
        <%= form.label :name, "Nom du forfait", class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :name, 
            class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm",
            placeholder: "ex: Forfait Débutant" %>
      </div>

      <div>
        <%= form.label :description, "Description", class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_area :description, rows: 3,
            class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm",
            placeholder: "Description du forfait..." %>
      </div>

      <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
        <div>
          <%= form.label :credits, "Nombre de crédits", class: "block text-sm font-medium text-gray-700" %>
          <%= form.number_field :credits, min: 1,
              class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm",
              placeholder: "1000" %>
        </div>

        <div>
          <%= form.label :price_cents, "Prix (en centimes)", class: "block text-sm font-medium text-gray-700" %>
          <%= form.number_field :price_cents, min: 1,
              class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm",
              placeholder: "1000 (pour 10€)" %>
          <p class="mt-1 text-sm text-gray-500">Entrez le prix en centimes (1000 = 10€)</p>
        </div>
      </div>

      <div class="flex items-center">
        <%= form.check_box :active, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
        <%= form.label :active, "Forfait actif", class: "ml-2 block text-sm text-gray-900" %>
      </div>

      <div class="flex justify-end space-x-3">
        <%= link_to "Annuler", admin_credit_packages_path, 
            class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        <%= form.submit "Créer le forfait", 
            class: "bg-blue-600 py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      </div>
    <% end %>
  </div>
</div>
