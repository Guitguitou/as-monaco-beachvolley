<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold">Gestion des Packs</h1>
    <%= link_to "Nouveau pack", new_admin_pack_path, class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>

  <div class="bg-white shadow-md rounded-lg overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Nom</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Type</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Montant</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Crédits</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Position</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Statut</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @packs.each do |pack| %>
          <tr>
            <td class="px-6 py-4"><%= pack.name %></td>
            <td class="px-6 py-4"><span class="px-2 py-1 rounded bg-blue-100"><%= pack.pack_type %></span></td>
            <td class="px-6 py-4"><%= number_to_currency(pack.amount_eur, unit: "€") %></td>
            <td class="px-6 py-4"><%= pack.credits || "-" %></td>
            <td class="px-6 py-4"><%= pack.position %></td>
            <td class="px-6 py-4">
              <% if pack.active? %>
                <span class="px-2 py-1 rounded bg-green-100 text-green-800">Actif</span>
              <% else %>
                <span class="px-2 py-1 rounded bg-gray-100 text-gray-800">Inactif</span>
              <% end %>
            </td>
            <td class="px-6 py-4 space-x-2">
              <%= link_to "Modifier", edit_admin_pack_path(pack), class: "text-blue-600 hover:text-blue-900" %>
              <%= button_to "Supprimer", admin_pack_path(pack), method: :delete, data: { turbo_confirm: "Êtes-vous sûr ?" }, class: "text-red-600 hover:text-red-900" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
