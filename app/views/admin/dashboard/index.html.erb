<div class="max-w-7xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
  <h1 class="text-3xl font-bold text-asmbv-red mb-8">Dashboard Administrateur</h1>

  <!-- KPI cards -->
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 mb-8">
    <div class="bg-white shadow rounded-lg p-4">
      <div class="text-xs text-gray-500">Revenu (crédits) ce mois</div>
      <div class="mt-1 text-2xl font-bold text-gray-900"><%= @current_month_revenue %></div>
    </div>
    <div class="bg-white shadow rounded-lg p-4">
      <div class="text-xs text-gray-500">Entraînements (semaine)</div>
      <div class="mt-1 text-2xl font-bold text-gray-900"><%= @upcoming_trainings.count %></div>
    </div>
    <div class="bg-white shadow rounded-lg p-4">
      <div class="text-xs text-gray-500">Jeux libres (à venir)</div>
      <div class="mt-1 text-2xl font-bold text-gray-900"><%= @upcoming_free_plays.count %></div>
    </div>
    <div class="bg-white shadow rounded-lg p-4">
      <div class="text-xs text-gray-500">Coachings privés (à venir)</div>
      <div class="mt-1 text-2xl font-bold text-gray-900"><%= @upcoming_private_coachings.count %></div>
    </div>
  </div>

  <!-- Tableau Charges / Revenus -->
  <div class="bg-white shadow rounded-lg overflow-hidden mb-8">
    <div class="px-4 py-3 border-b border-gray-100">
      <h2 class="text-lg font-semibold text-gray-900">Charges / Revenus</h2>
    </div>
    <div class="overflow-x-auto">
      <table class="min-w-full table-fixed">
        <thead class="bg-gray-50 text-xs font-semibold text-gray-500 uppercase">
          <tr>
            <th class="px-3 sm:px-4 py-2 w-32 text-left">Période</th>
            <th class="px-3 sm:px-4 py-2 w-40 text-right">Charges (€)</th>
            <th class="px-3 sm:px-4 py-2 w-40 text-right">Revenus (€)</th>
            <th class="px-3 sm:px-4 py-2 w-40 text-right">Bénéfice (€)</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-100">
          <tr class="bg-gray-50">
            <td class="px-3 sm:px-4 py-2 text-sm font-medium text-gray-900">Cette semaine</td>
            <td class="px-3 sm:px-4 py-2 text-sm text-right">
              <div class="text-red-600 font-semibold">
                <%= number_with_precision(@weekly_charges, precision: 2) %>
              </div>
              <div class="text-xs text-gray-500">
                Salaires: <%= number_with_precision(@weekly_charges_breakdown[:coach_salaries], precision: 2) %>€
                <br>Remboursements: <%= number_with_precision(@weekly_charges_breakdown[:refunds], precision: 2) %>€
              </div>
            </td>
            <td class="px-3 sm:px-4 py-2 text-sm text-right">
              <div class="text-green-600 font-semibold">
                <%= number_with_precision(@weekly_revenue, precision: 2) %>
              </div>
            </td>
            <td class="px-3 sm:px-4 py-2 text-sm text-right">
              <div class="font-semibold <%= @weekly_net_profit >= 0 ? 'text-green-600' : 'text-red-600' %>">
                <%= number_with_precision(@weekly_net_profit, precision: 2) %>
              </div>
            </td>
          </tr>
          <tr>
            <td class="px-3 sm:px-4 py-2 text-sm font-medium text-gray-900">Ce mois</td>
            <td class="px-3 sm:px-4 py-2 text-sm text-right">
              <div class="text-red-600 font-semibold">
                <%= number_with_precision(@monthly_charges, precision: 2) %>
              </div>
              <div class="text-xs text-gray-500">
                Salaires: <%= number_with_precision(@monthly_charges_breakdown[:coach_salaries], precision: 2) %>€
                <br>Remboursements: <%= number_with_precision(@monthly_charges_breakdown[:refunds], precision: 2) %>€
              </div>
            </td>
            <td class="px-3 sm:px-4 py-2 text-sm text-right">
              <div class="text-green-600 font-semibold">
                <%= number_with_precision(@monthly_revenue, precision: 2) %>
              </div>
            </td>
            <td class="px-3 sm:px-4 py-2 text-sm text-right">
              <div class="font-semibold <%= @monthly_net_profit >= 0 ? 'text-green-600' : 'text-red-600' %>">
                <%= number_with_precision(@monthly_net_profit, precision: 2) %>
              </div>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Coach salary summary -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-8">
    <div class="bg-white shadow rounded-lg p-4">
      <div class="text-xs text-gray-500">Salaire coach (semaine) €</div>
      <div class="mt-1 text-2xl font-bold text-gray-900"><%= @coach_salary_week %></div>
    </div>
    <div class="bg-white shadow rounded-lg p-4">
      <div class="text-xs text-gray-500">Salaire coach (mois) €</div>
      <div class="mt-1 text-2xl font-bold text-gray-900"><%= @coach_salary_month %></div>
    </div>
    <div class="bg-white shadow rounded-lg p-4">
      <div class="text-xs text-gray-500">Salaire coach (année) €</div>
      <div class="mt-1 text-2xl font-bold text-gray-900"><%= @coach_salary_year %></div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Détail salaires par coach -->
    <div class="bg-white shadow rounded-lg overflow-hidden lg:col-span-2">
      <div class="px-4 py-3 border-b border-gray-100 flex items-center justify-between">
        <h2 class="text-lg font-semibold text-gray-900">Récap salaires par coach</h2>
      </div>
      <div class="overflow-x-auto">
        <table class="min-w-full table-fixed">
          <thead class="bg-gray-50 text-xs font-semibold text-gray-500 uppercase">
            <tr>
              <th class="px-3 sm:px-4 py-2 w-64 text-left">Coach</th>
              <th class="px-3 sm:px-4 py-2 w-40 text-right">Semaine (€)</th>
              <th class="px-3 sm:px-4 py-2 w-40 text-right">Mois (€)</th>
              <th class="px-3 sm:px-4 py-2 w-40 text-right">Année (€)</th>
              <th class="px-3 sm:px-4 py-2 w-40 text-right">Entraînements (mois)</th>
              <th class="px-3 sm:px-4 py-2 w-40 text-right">€ / entraînement</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-100">
            <% @coach_breakdown.each do |row| %>
              <tr>
                <td class="px-3 sm:px-4 py-2 text-sm">
                  <%= link_to row[:user]&.full_name, admin_user_path(row[:user]), class: "text-asmbv-red hover:underline" %>
                </td>
                <td class="px-3 sm:px-4 py-2 text-sm text-right"><%= number_with_precision(row[:week_amount], precision: 2) %></td>
                <td class="px-3 sm:px-4 py-2 text-sm text-right font-semibold">
                  <%= link_to number_with_precision(row[:month_amount], precision: 2),
                              admin_sessions_path(coach_id: row[:user]&.id, period: 'month'),
                              class: "text-asmbv-red hover:underline" %>
                </td>
                <td class="px-3 sm:px-4 py-2 text-sm text-right"><%= number_with_precision(row[:year_amount], precision: 2) %></td>
                <td class="px-3 sm:px-4 py-2 text-sm text-right">
                  <%= link_to row[:month_count], admin_sessions_path(coach_id: row[:user]&.id, period: 'month'), class: "hover:underline" %>
                </td>
                <td class="px-3 sm:px-4 py-2 text-sm text-right"><%= number_with_precision(row[:user]&.salary_per_training, precision: 2) %></td>
              </tr>
            <% end %>
            <% if @coach_breakdown.empty? %>
              <tr>
                <td colspan="6" class="px-4 py-6 text-center text-sm text-gray-500">Aucun entraînement planifié sur les périodes.</td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <!-- Entraînements de la semaine à venir -->
    <div class="bg-white shadow rounded-lg overflow-hidden">
      <div class="px-4 py-3 border-b border-gray-100 flex items-center justify-between">
        <h2 class="text-lg font-semibold text-gray-900">Les entraînements de la semaine à venir</h2>
        <%= link_to "Voir toutes les sessions", admin_sessions_path, class: "text-sm text-asmbv-red hover:underline" %>
      </div>
      <div class="overflow-x-auto">
        <table class="min-w-full table-fixed">
          <thead class="bg-gray-50 text-xs font-semibold text-gray-500 uppercase">
            <tr>
              <th class="px-3 sm:px-4 py-2 w-40">Date</th>
              <th class="px-3 sm:px-4 py-2">Titre</th>
              <th class="px-3 sm:px-4 py-2 w-28">Terrain</th>
              <th class="px-3 sm:px-4 py-2 w-24 text-right">Prix</th>
              <th class="px-3 sm:px-4 py-2 w-40">Niveaux</th>
              <th class="px-3 sm:px-4 py-2 w-28 text-right">Inscrits</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-100">
            <% @upcoming_trainings.each do |s| %>
              <tr>
                <td class="px-3 sm:px-4 py-2 text-sm text-gray-700"><%= l(s.start_at, format: :long) %></td>
                <td class="px-3 sm:px-4 py-2 text-sm font-medium text-gray-900"><%= s.title %></td>
                <td class="px-3 sm:px-4 py-2 text-sm"><%= s.terrain %></td>
                <td class="px-3 sm:px-4 py-2 text-sm text-right"><%= s.price %></td>
                <td class="px-3 sm:px-4 py-2 text-sm text-gray-700"><%= s.levels.map(&:display_name).join(', ').presence || 'Tous niveaux' %></td>
                <td class="px-3 sm:px-4 py-2 text-sm text-right"><%= s.registrations.confirmed.count %>/<%= s.max_players || '∞' %></td>
              </tr>
            <% end %>
            <% if @upcoming_trainings.empty? %>
              <tr>
                <td colspan="6" class="px-4 py-6 text-center text-sm text-gray-500">Aucun entraînement prévu cette semaine.</td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Sessions de jeu libre à venir -->
    <div class="bg-white shadow rounded-lg overflow-hidden">
      <div class="px-4 py-3 border-b border-gray-100 flex items-center justify-between">
        <h2 class="text-lg font-semibold text-gray-900">Les sessions de jeux libres à venir</h2>
        <%= link_to "Voir toutes les sessions", admin_sessions_path, class: "text-sm text-asmbv-red hover:underline" %>
      </div>
      <div class="overflow-x-auto">
        <table class="min-w-full table-fixed">
          <thead class="bg-gray-50 text-xs font-semibold text-gray-500 uppercase">
            <tr>
              <th class="px-3 sm:px-4 py-2 w-40">Date</th>
              <th class="px-3 sm:px-4 py-2">Titre</th>
              <th class="px-3 sm:px-4 py-2 w-28">Terrain</th>
              <th class="px-3 sm:px-4 py-2 w-24 text-right">Prix</th>
              <th class="px-3 sm:px-4 py-2 w-28 text-right">Inscrits</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-100">
            <% @upcoming_free_plays.each do |s| %>
              <tr>
                <td class="px-3 sm:px-4 py-2 text-sm text-gray-700"><%= l(s.start_at, format: :long) %></td>
                <td class="px-3 sm:px-4 py-2 text-sm font-medium text-gray-900"><%= s.title %></td>
                <td class="px-3 sm:px-4 py-2 text-sm"><%= s.terrain %></td>
                <td class="px-3 sm:px-4 py-2 text-sm text-right"><%= s.price %></td>
                <td class="px-3 sm:px-4 py-2 text-sm text-right"><%= s.registrations.confirmed.count %>/<%= s.max_players || '∞' %></td>
              </tr>
            <% end %>
            <% if @upcoming_free_plays.empty? %>
              <tr>
                <td colspan="5" class="px-4 py-6 text-center text-sm text-gray-500">Aucune session de jeu libre à venir.</td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Coachings privés à venir -->
    <div class="bg-white shadow rounded-lg overflow-hidden lg:col-span-2">
      <div class="px-4 py-3 border-b border-gray-100 flex items-center justify-between">
        <h2 class="text-lg font-semibold text-gray-900">Les coachings privés à venir</h2>
        <%= link_to "Voir toutes les sessions", admin_sessions_path, class: "text-sm text-asmbv-red hover:underline" %>
      </div>
      <div class="overflow-x-auto">
        <table class="min-w-full table-fixed">
          <thead class="bg-gray-50 text-xs font-semibold text-gray-500 uppercase">
            <tr>
              <th class="px-3 sm:px-4 py-2 w-40">Date</th>
              <th class="px-3 sm:px-4 py-2">Titre</th>
              <th class="px-3 sm:px-4 py-2 w-28">Terrain</th>
              <th class="px-3 sm:px-4 py-2 w-40">Coach</th>
              <th class="px-3 sm:px-4 py-2 w-28 text-right">Inscrits</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-100">
            <% @upcoming_private_coachings.each do |s| %>
              <tr>
                <td class="px-3 sm:px-4 py-2 text-sm text-gray-700"><%= l(s.start_at, format: :long) %></td>
                <td class="px-3 sm:px-4 py-2 text-sm font-medium text-gray-900"><%= s.title %></td>
                <td class="px-3 sm:px-4 py-2 text-sm"><%= s.terrain %></td>
                <td class="px-3 sm:px-4 py-2 text-sm text-gray-700"><%= s.user&.full_name %></td>
                <td class="px-3 sm:px-4 py-2 text-sm text-right"><%= s.registrations.confirmed.count %>/<%= s.max_players || '∞' %></td>
              </tr>
            <% end %>
            <% if @upcoming_private_coachings.empty? %>
              <tr>
                <td colspan="5" class="px-4 py-6 text-center text-sm text-gray-500">Aucun coaching privé à venir.</td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Désinscriptions hors délai -->
    <div class="bg-white shadow rounded-lg overflow-hidden lg:col-span-2">
      <div class="px-4 py-3 border-b border-gray-100 flex items-center justify-between">
        <h2 class="text-lg font-semibold text-gray-900">Désinscriptions hors délai</h2>
      </div>
      <div class="overflow-x-auto">
        <table class="min-w-full table-fixed">
          <thead class="bg-gray-50 text-xs font-semibold text-gray-500 uppercase">
            <tr>
              <th class="px-3 sm:px-4 py-2 w-64 text-left">Nom</th>
              <th class="px-3 sm:px-4 py-2 text-left">Entraînement</th>
              <th class="px-3 sm:px-4 py-2 w-40 text-right">Nombre de fois</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-100">
            <% @late_cancellations.each do |lc| %>
              <tr>
                <td class="px-3 sm:px-4 py-2 text-sm">
                  <%= link_to lc.user&.full_name, admin_user_path(lc.user), class: "text-asmbv-red hover:underline" %>
                </td>
                <td class="px-3 sm:px-4 py-2 text-sm">
                  <%= link_to lc.session&.display_name, admin_session_path(lc.session), class: "hover:underline" %>
                </td>
                <td class="px-3 sm:px-4 py-2 text-sm text-right">
                  <%= @late_cancellation_counts[lc.user_id].to_i %>
                </td>
              </tr>
            <% end %>
            <% if @late_cancellations.empty? %>
              <tr>
                <td colspan="3" class="px-4 py-6 text-center text-sm text-gray-500">Aucune désinscription hors délai récente.</td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
