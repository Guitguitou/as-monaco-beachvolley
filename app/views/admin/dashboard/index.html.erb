<div class="max-w-7xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
  <h1 class="text-3xl font-bold text-asmbv-red mb-8">Dashboard Administrateur</h1>

  <!-- KPI cards -->
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 mb-8">
    <div class="bg-white shadow rounded-lg p-4">
      <div class="text-xs text-gray-500">Revenu (crédits) ce mois</div>
      <div class="mt-1 text-2xl font-bold text-gray-900"><%= @current_month_revenue %></div>
    </div>
    <div class="bg-white shadow rounded-lg p-4">
      <div class="text-xs text-gray-500">Entraînements (semaine)</div>
      <div class="mt-1 text-2xl font-bold text-gray-900"><%= @upcoming_trainings.count %></div>
    </div>
    <div class="bg-white shadow rounded-lg p-4">
      <div class="text-xs text-gray-500">Jeux libres (à venir)</div>
      <div class="mt-1 text-2xl font-bold text-gray-900"><%= @upcoming_free_plays.count %></div>
    </div>
    <div class="bg-white shadow rounded-lg p-4">
      <div class="text-xs text-gray-500">Coachings privés (à venir)</div>
      <div class="mt-1 text-2xl font-bold text-gray-900"><%= @upcoming_private_coachings.count %></div>
    </div>
  </div>

  <!-- Coach salary summary -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-8">
    <div class="bg-white shadow rounded-lg p-4">
      <div class="text-xs text-gray-500">Salaire coach (semaine) €</div>
      <div class="mt-1 text-2xl font-bold text-gray-900"><%= @coach_salary_week %></div>
    </div>
    <div class="bg-white shadow rounded-lg p-4">
      <div class="text-xs text-gray-500">Salaire coach (mois) €</div>
      <div class="mt-1 text-2xl font-bold text-gray-900"><%= @coach_salary_month %></div>
    </div>
    <div class="bg-white shadow rounded-lg p-4">
      <div class="text-xs text-gray-500">Salaire coach (année) €</div>
      <div class="mt-1 text-2xl font-bold text-gray-900"><%= @coach_salary_year %></div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Entraînements de la semaine à venir -->
    <div class="bg-white shadow rounded-lg overflow-hidden">
      <div class="px-4 py-3 border-b border-gray-100 flex items-center justify-between">
        <h2 class="text-lg font-semibold text-gray-900">Les entraînements de la semaine à venir</h2>
        <%= link_to "Voir toutes les sessions", admin_sessions_path, class: "text-sm text-asmbv-red hover:underline" %>
      </div>
      <div class="overflow-x-auto">
        <table class="min-w-full table-fixed">
          <thead class="bg-gray-50 text-xs font-semibold text-gray-500 uppercase">
            <tr>
              <th class="px-3 sm:px-4 py-2 w-40">Date</th>
              <th class="px-3 sm:px-4 py-2">Titre</th>
              <th class="px-3 sm:px-4 py-2 w-28">Terrain</th>
              <th class="px-3 sm:px-4 py-2 w-24 text-right">Prix</th>
              <th class="px-3 sm:px-4 py-2 w-40">Niveaux</th>
              <th class="px-3 sm:px-4 py-2 w-28 text-right">Inscrits</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-100">
            <% @upcoming_trainings.each do |s| %>
              <tr>
                <td class="px-3 sm:px-4 py-2 text-sm text-gray-700"><%= l(s.start_at, format: :long) %></td>
                <td class="px-3 sm:px-4 py-2 text-sm font-medium text-gray-900"><%= s.title %></td>
                <td class="px-3 sm:px-4 py-2 text-sm"><%= s.terrain %></td>
                <td class="px-3 sm:px-4 py-2 text-sm text-right"><%= s.price %></td>
                <td class="px-3 sm:px-4 py-2 text-sm text-gray-700"><%= s.levels.map(&:display_name).join(', ').presence || 'Tous niveaux' %></td>
                <td class="px-3 sm:px-4 py-2 text-sm text-right"><%= s.registrations.confirmed.count %>/<%= s.max_players || '∞' %></td>
              </tr>
            <% end %>
            <% if @upcoming_trainings.empty? %>
              <tr>
                <td colspan="6" class="px-4 py-6 text-center text-sm text-gray-500">Aucun entraînement prévu cette semaine.</td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Sessions de jeu libre à venir -->
    <div class="bg-white shadow rounded-lg overflow-hidden">
      <div class="px-4 py-3 border-b border-gray-100 flex items-center justify-between">
        <h2 class="text-lg font-semibold text-gray-900">Les sessions de jeux libres à venir</h2>
        <%= link_to "Voir toutes les sessions", admin_sessions_path, class: "text-sm text-asmbv-red hover:underline" %>
      </div>
      <div class="overflow-x-auto">
        <table class="min-w-full table-fixed">
          <thead class="bg-gray-50 text-xs font-semibold text-gray-500 uppercase">
            <tr>
              <th class="px-3 sm:px-4 py-2 w-40">Date</th>
              <th class="px-3 sm:px-4 py-2">Titre</th>
              <th class="px-3 sm:px-4 py-2 w-28">Terrain</th>
              <th class="px-3 sm:px-4 py-2 w-24 text-right">Prix</th>
              <th class="px-3 sm:px-4 py-2 w-28 text-right">Inscrits</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-100">
            <% @upcoming_free_plays.each do |s| %>
              <tr>
                <td class="px-3 sm:px-4 py-2 text-sm text-gray-700"><%= l(s.start_at, format: :long) %></td>
                <td class="px-3 sm:px-4 py-2 text-sm font-medium text-gray-900"><%= s.title %></td>
                <td class="px-3 sm:px-4 py-2 text-sm"><%= s.terrain %></td>
                <td class="px-3 sm:px-4 py-2 text-sm text-right"><%= s.price %></td>
                <td class="px-3 sm:px-4 py-2 text-sm text-right"><%= s.registrations.confirmed.count %>/<%= s.max_players || '∞' %></td>
              </tr>
            <% end %>
            <% if @upcoming_free_plays.empty? %>
              <tr>
                <td colspan="5" class="px-4 py-6 text-center text-sm text-gray-500">Aucune session de jeu libre à venir.</td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Coachings privés à venir -->
    <div class="bg-white shadow rounded-lg overflow-hidden lg:col-span-2">
      <div class="px-4 py-3 border-b border-gray-100 flex items-center justify-between">
        <h2 class="text-lg font-semibold text-gray-900">Les coachings privés à venir</h2>
        <%= link_to "Voir toutes les sessions", admin_sessions_path, class: "text-sm text-asmbv-red hover:underline" %>
      </div>
      <div class="overflow-x-auto">
        <table class="min-w-full table-fixed">
          <thead class="bg-gray-50 text-xs font-semibold text-gray-500 uppercase">
            <tr>
              <th class="px-3 sm:px-4 py-2 w-40">Date</th>
              <th class="px-3 sm:px-4 py-2">Titre</th>
              <th class="px-3 sm:px-4 py-2 w-28">Terrain</th>
              <th class="px-3 sm:px-4 py-2 w-40">Coach</th>
              <th class="px-3 sm:px-4 py-2 w-28 text-right">Inscrits</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-100">
            <% @upcoming_private_coachings.each do |s| %>
              <tr>
                <td class="px-3 sm:px-4 py-2 text-sm text-gray-700"><%= l(s.start_at, format: :long) %></td>
                <td class="px-3 sm:px-4 py-2 text-sm font-medium text-gray-900"><%= s.title %></td>
                <td class="px-3 sm:px-4 py-2 text-sm"><%= s.terrain %></td>
                <td class="px-3 sm:px-4 py-2 text-sm text-gray-700"><%= s.user&.full_name %></td>
                <td class="px-3 sm:px-4 py-2 text-sm text-right"><%= s.registrations.confirmed.count %>/<%= s.max_players || '∞' %></td>
              </tr>
            <% end %>
            <% if @upcoming_private_coachings.empty? %>
              <tr>
                <td colspan="5" class="px-4 py-6 text-center text-sm text-gray-500">Aucun coaching privé à venir.</td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
