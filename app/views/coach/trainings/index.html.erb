<div class="container mx-auto px-4 py-8">
  <div class="max-w-6xl mx-auto space-y-6">
    <!-- Header -->
    <div class="flex items-center justify-between">
      <h1 class="text-2xl font-bold text-gray-900 flex items-center gap-2">
        <%= lucide_icon("users", class: "w-6 h-6 text-asmbv-red") %>
        Espace Entraîneur
      </h1>
    </div>

    <!-- Tabs Navigation -->
    <div class="border-b border-gray-200">
      <nav class="-mb-px flex space-x-8">
        <%= link_to coach_trainings_path(tab: 'library'), 
            class: "py-2 px-1 border-b-2 font-medium text-sm #{'border-asmbv-red text-asmbv-red' if @active_tab == 'library'} #{'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300' if @active_tab != 'library'}" do %>
          <%= lucide_icon("book-open", class: "w-4 h-4 inline mr-2") %>
          Bibliothèque des entraînements
        <% end %>
        <%= link_to coach_trainings_path(tab: 'my_trainings'), 
            class: "py-2 px-1 border-b-2 font-medium text-sm #{'border-asmbv-red text-asmbv-red' if @active_tab == 'my_trainings'} #{'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300' if @active_tab != 'my_trainings'}" do %>
          <%= lucide_icon("user", class: "w-4 h-4 inline mr-2") %>
          Mes entraînements
        <% end %>
      </nav>
    </div>

    <!-- Tab Content -->
    <% if @active_tab == 'library' %>
      <%= render 'library_tab' %>
    <% elsif @active_tab == 'my_trainings' %>
      <%= render 'my_trainings_tab' %>
    <% end %>
  </div>
</div>
