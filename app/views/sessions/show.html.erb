<div class="container mx-auto px-4 py-8">
  <div class="max-w-6xl mx-auto">
    <!-- Breadcrumb -->
    <nav class="flex items-center justify-between gap-2 mb-6">
      <%= link_to sessions_path, class: "inline-flex items-center gap-1 rounded-md border border-gray-300 bg-white px-3 py-1.5 text-sm font-semibold text-gray-700 shadow-sm hover:bg-gray-50" do %>
        <%= lucide_icon("arrow-left", size: 16) %> Retour au calendrier
      <% end %>
      <% if user_signed_in? && current_user.admin? %>
        <%= link_to edit_admin_session_path(@session), class: "inline-flex items-center gap-1 rounded-md border border-gray-300 bg-white px-3 py-1.5 text-sm font-semibold text-gray-700 shadow-sm hover:bg-gray-50" do %>
          <%= lucide_icon("edit", size: 16) %> Modifier
        <% end %>
      <% end %>
    </nav>

    <div class="">
      <div class="lg:col-span-2">
        <div class="bg-white rounded-lg shadow-sm p-6 mb-6">
          <%= render 'show_header' %>
          <%= render 'informations' %>
          <%= render 'participants' %>
          <% if user_signed_in? && @session.entrainement? && (current_user.admin? || current_user == @session.user) %>
            <hr class="my-6" />
            <div>
              <h3 class="text-lg font-semibold text-gray-900 mb-3">Notes entraîneur</h3>
              <div class="mb-3 text-sm text-gray-600">Thème, retours, informations utiles (visible uniquement par les coachs et admins)</div>
              <%= form_with model: @session, url: session_path(@session), method: :put, local: true do |f| %>
                <%= f.text_area :coach_notes, rows: 6, class: "w-full rounded-md border border-gray-300 bg-white px-3 py-2 text-gray-900 placeholder:text-gray-400 focus:border-asmbv-red focus:ring-2 focus:ring-asmbv-red sm:text-sm" %>
                <div class="mt-3 flex items-center gap-2">
                  <%= f.submit "Enregistrer les notes", class: "inline-flex items-center gap-1 rounded-md bg-gray-800 px-3 py-2 text-sm font-semibold text-white hover:bg-gray-700" %>
                  <% if @session.coach_notes.present? %>
                    <span class="text-xs text-gray-500">Dernière mise à jour: <%= l(@session.updated_at, format: :short) %></span>
                  <% end %>
                </div>
              <% end %>
            </div>
          <% elsif user_signed_in? && @session.entrainement? && (current_user.admin? || current_user.coach?) && @session.coach_notes.present? %>
            <hr class="my-6" />
            <div>
              <h3 class="text-lg font-semibold text-gray-900 mb-3">Notes entraîneur</h3>
              <div class="prose prose-sm max-w-none whitespace-pre-line text-gray-800"><%= @session.coach_notes %></div>
            </div>
          <% end %>
        </div>
      </div>
      <% if current_user&.admin? || current_user == @session.user %>
        <div class="lg:col-span-1">
          <div class="bg-white rounded-lg shadow-sm p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-3">Ajouter un·e inscrit·e</h3>
            <%= form_with url: session_registrations_path(@session), method: :post, local: true, class: "space-y-3" do |f| %>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Utilisateur·ice</label>
                <%= select_tag :user_id,
                               options_from_collection_for_select(@candidate_users || [], :id, :full_name),
                               include_blank: "Choisir...",
                               class: "w-full border rounded px-2 py-2",
                               data: { controller: "select", "select-placeholder-value": "Rechercher un·e joueur·se..." } %>
              </div>
              <% if @session.entrainement? && @session.past_registration_deadline? %>
                <div class="text-xs text-blue-800 bg-blue-50 inline-flex items-center gap-1 px-2 py-1 rounded">
                  <%= lucide_icon("info", class: "w-3 h-3") %>
                  Délai d'inscription dépassé (17h), mais vous pouvez inscrire.
                </div>
              <% end %>
              <% if @session.full? %>
                <%= hidden_field_tag :waitlist, true %>
                <div class="text-xs text-yellow-800 bg-yellow-50 inline-flex items-center gap-1 px-2 py-1 rounded">
                  <%= lucide_icon("alert-circle", class: "w-3 h-3") %>
                  Session complète: ajout en liste d'attente.
                </div>
              <% end %>
              <%= f.submit(@session.full? ? "Ajouter en attente" : "Ajouter",
                          class: "w-full inline-flex items-center justify-center gap-1 px-3 py-2 text-sm text-white bg-asmbv-red hover:bg-asmbv-red-dark rounded") %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<% content_for :head do %>
  <style>
    .session-type-entrainement { @apply bg-green-100 text-green-800; }
    .session-type-jeu_libre { @apply bg-blue-100 text-blue-800; }
    .session-type-tournoi { @apply bg-purple-100 text-purple-800; }
    .session-type-coaching_prive { @apply bg-orange-100 text-orange-800; }
  </style>
<% end %> 
