<h3 class="text-lg font-semibold text-gray-900 mb-3 mt-4">Liste des participants</h3>
<div class="flex flex-col gap-2">
  <% @session.registrations.confirmed.includes(:user).each do |registration| %>
    <div class="flex items-center justify-between px-3 py-2 bg-gray-50 rounded">
      <div class="flex items-center gap-2">
        <%= lucide_icon("user", class: "w-4 h-4 text-gray-500") %>
        <span><%= registration.user.full_name %></span>
      </div>
      <% if can?(:manage, Registration) %>
        <%= button_to session_registration_path(@session, user_id: registration.user_id), method: :delete,
                      form: { data: { turbo_confirm: "Retirer #{registration.user.full_name} ?" } },
                      class: "inline-flex items-center gap-1 px-2 py-1 text-sm text-white bg-red-600 hover:bg-red-500 rounded" do %>
          <%= lucide_icon("trash-2", class: "w-4 h-4") %>
          Retirer
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>

<% waitlisted = @session.registrations.waitlisted.order(:created_at) %>
<% if waitlisted.any? %>
  <h3 class="text-lg font-semibold text-gray-900 mb-3 mt-6">Liste d’attente</h3>
  <div class="flex flex-col gap-2">
    <% waitlisted.each_with_index do |registration, index| %>
      <div class="flex items-center justify-between px-3 py-2 bg-yellow-50 text-yellow-800 rounded">
        <div class="flex items-center gap-2">
          <span class="inline-flex items-center justify-center w-6 h-6 text-xs font-bold bg-yellow-200 text-yellow-800 rounded-full"><%= index + 1 %></span>
          <span><%= registration.user.full_name %></span>
        </div>
        <div class="flex items-center gap-2">
          <span class="text-xs">En attente</span>
          <% if can?(:manage, Registration) %>
            <%= button_to session_registration_path(@session, user_id: registration.user_id), method: :delete,
                          form: { data: { turbo_confirm: "Retirer #{registration.user.full_name} de la liste d'attente ?" } },
                          class: "inline-flex items-center gap-1 px-2 py-1 text-xs text-white bg-red-600 hover:bg-red-500 rounded" do %>
              <%= lucide_icon("trash-2", class: "w-3 h-3") %>
              Retirer
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>

<% if can?(:manage, Registration) %>
  <div class="mt-6">
    <h3 class="text-lg font-semibold text-gray-900 mb-3">Ajouter un·e inscrit·e</h3>
    <div class="flex items-center gap-2">
      <%= form_with url: session_registrations_path(@session), method: :post, local: true, class: "flex items-center gap-2" do |f| %>
        <%= select_tag :user_id,
                       options_from_collection_for_select(@candidate_users || [], :id, :full_name),
                       include_blank: "Choisir un·e utilisateur·ice",
                       class: "border rounded px-2 py-1" %>
        <%# If the session is full, allow quick waitlist add %>
        <% if @session.full? %>
          <%= hidden_field_tag :waitlist, true %>
        <% end %>
        <%= f.submit(@session.full? ? "Ajouter en attente" : "Ajouter", class: "inline-flex items-center gap-1 px-3 py-2 text-sm text-white bg-gray-800 hover:bg-gray-700 rounded") %>
      <% end %>
    </div>
    <% if @session.full? %>
      <p class="mt-2 text-xs text-yellow-800 bg-yellow-50 inline-flex items-center gap-1 px-2 py-1 rounded">
        <%= lucide_icon("alert-circle", class: "w-3 h-3") %>
        Session complète: les ajouts seront placés en liste d’attente.
      </p>
    <% end %>
  </div>
<% end %>
