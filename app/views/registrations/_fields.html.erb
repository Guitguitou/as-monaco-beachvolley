<div class="flex items-center gap-4 mb-4" data-registration-form-target="participant">
  <div class="flex-1">
    <%= f.label :user_id, "Participant(s)", class: "block text-sm font-medium text-gray-900" %>
    <%= f.select :user_id, options_for_select(
      User.with_enough_credits(session).map { |u| ["#{u.full_name} (#{u.balance&.amount} cr)", u.id] },
      f.object.user_id
    ), {}, class: "block w-full rounded-md border border-gray-300 bg-white px-3 py-2 text-gray-900 
        focus:border-asmbv-red focus:ring-2 focus:ring-asmbv-red sm:text-sm", 
        multiple: false,
        data: { controller: "select", action: "change->registrations-form#checkCredits" } %>
  </div>

  <%= f.hidden_field :_destroy %>
  <button type="button"
          class="text-red-600 hover:text-red-800"
          data-action="click->registrations-form#removeParticipant">
    <%= lucide_icon("trash-2", class: "w-5 h-5") %>
  </button>
</div>
