<!-- Coach Trainings Tab Content -->
<% trainings_tab = @trainings_tab || 'library' %>

<div class="space-y-6">
  <div class="border-b border-gray-200">
    <nav class="-mb-px flex space-x-8">
      <%= link_to profile_path(tab: 'trainings', trainings_tab: 'library', only_mine: params[:only_mine]),
          class: "py-2 px-1 border-b-2 font-medium text-sm #{'border-asmbv-red text-asmbv-red' if trainings_tab == 'library'} #{'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300' if trainings_tab != 'library'}" do %>
        <%= lucide_icon("book-open", class: "w-4 h-4 inline mr-2") %>
        Bibliothèque des entraînements
      <% end %>
      <%= link_to profile_path(tab: 'trainings', trainings_tab: 'my_trainings'),
          class: "py-2 px-1 border-b-2 font-medium text-sm #{'border-asmbv-red text-asmbv-red' if trainings_tab == 'my_trainings'} #{'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300' if trainings_tab != 'my_trainings'}" do %>
        <%= lucide_icon("user", class: "w-4 h-4 inline mr-2") %>
        Mes entraînements
      <% end %>
    </nav>
  </div>

  <% if trainings_tab == 'library' %>
    <%= render "coach/trainings/library_tab",
          trainings_base_path: profile_path(tab: 'trainings'),
          trainings_tab_param: 'trainings_tab' %>
  <% elsif trainings_tab == 'my_trainings' %>
    <%= render "coach/trainings/my_trainings_tab" %>
  <% end %>
</div>
