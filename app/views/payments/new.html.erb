<div class="container mx-auto px-4 py-8">
  <div class="max-w-4xl mx-auto">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900">Acheter des Crédits</h1>
      <p class="text-gray-600 mt-2">Choisissez un forfait pour recharger votre solde de crédits</p>
    </div>

    <div class="mb-6 p-4 bg-blue-50 border border-blue-200 rounded-md">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-blue-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-blue-800">
            Solde actuel : <%= current_user.credit_balance %> crédits
          </h3>
        </div>
      </div>
    </div>

    <% if @credit_packages.any? %>
      <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
        <% @credit_packages.each do |package| %>
          <div class="relative bg-white border border-gray-200 rounded-lg shadow-sm hover:shadow-md transition-shadow duration-200">
            <div class="p-6">
              <div class="flex items-center justify-between mb-4">
                <h3 class="text-lg font-semibold text-gray-900">
                  <%= package.name %>
                </h3>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                  Populaire
                </span>
              </div>
              
              <p class="text-sm text-gray-600 mb-4">
                <%= package.description %>
              </p>
              
              <div class="text-center mb-6">
                <div class="text-3xl font-bold text-gray-900">
                  <%= package.credits %>
                </div>
                <div class="text-sm text-gray-500">crédits</div>
                <div class="text-2xl font-bold text-blue-600 mt-2">
                  <%= package.price %>€
                </div>
              </div>
              
              <%= form_with url: payments_path, method: :post, local: true, class: "w-full" do |form| %>
                <%= form.hidden_field :credit_package_id, value: package.id %>
                <%= form.submit "Acheter", 
                    class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded transition-colors duration-200" %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-12">
        <div class="text-gray-500 text-lg mb-4">Aucun forfait disponible</div>
        <p class="text-gray-400">Contactez l'administrateur pour plus d'informations.</p>
      </div>
    <% end %>

    <div class="mt-8 text-center">
      <%= link_to "Voir mes paiements", payments_path, 
          class: "text-blue-600 hover:text-blue-800 text-sm font-medium" %>
    </div>
  </div>
</div>
