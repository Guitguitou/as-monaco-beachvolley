<div class="max-w-md mx-auto mt-16 bg-white p-8 rounded-lg shadow-md">
  <h2 class="text-2xl font-bold text-center text-gray-900 mb-6">Connexion</h2>

  <%= form_with model: resource, 
              as: resource_name, 
              url: user_session_path, 
              local: true,
              html: { class: "space-y-6" } do |f| %>

    <% if flash.alert %>
      <div class="rounded-md bg-red-50 border border-red-200 p-4">
        <p class="text-sm text-red-700"><%= flash.alert %></p>
      </div>
    <% end %>

    <!-- Email -->
    <div>
      <%= f.label :email, "Adresse email", class: "block text-sm font-medium text-gray-900" %>
      <div class="mt-2">
        <%= f.email_field :email, 
              required: true, autofocus: true,
              class: "block w-full rounded-md border border-gray-300 bg-white px-3 py-2 text-gray-900 
                      placeholder:text-gray-400 focus:border-asmbv-red focus:ring-2 focus:ring-asmbv-red sm:text-sm" %>
      </div>
    </div>

    <!-- Mot de passe -->
    <div>
      <%= f.label :password, "Mot de passe", class: "block text-sm font-medium text-gray-900" %>
      <div class="mt-2">
        <%= f.password_field :password, 
              required: true,
              class: "block w-full rounded-md border border-gray-300 bg-white px-3 py-2 text-gray-900 
                      placeholder:text-gray-400 focus:border-asmbv-red focus:ring-2 focus:ring-asmbv-red sm:text-sm" %>
      </div>
    </div>

    <!-- Se souvenir de moi -->
    <% if devise_mapping.rememberable? %>
      <div class="flex items-center">
        <%= f.check_box :remember_me, 
              class: "h-4 w-4 text-asmbv-red border-gray-300 rounded focus:ring-asmbv-red" %>
        <%= f.label :remember_me, "Se souvenir de moi", 
              class: "ml-2 block text-sm text-gray-700" %>
      </div>
    <% end %>

    <!-- Bouton connexion -->
    <div>
      <%= f.submit "Se connecter", 
            class: "w-full inline-flex justify-center items-center gap-x-1.5 rounded-md bg-asmbv-red px-4 py-2 
                    text-sm font-semibold text-white shadow-sm hover:bg-asmbv-red-dark 
                    focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 
                    focus-visible:outline-asmbv-red transition-colors" %>
    </div>
  <% end %>

  <!-- Lien mot de passe oublié -->
  <div class="mt-4 text-center">
    <%= link_to "Mot de passe oublié ?", new_password_path(resource_name), 
          class: "text-sm font-medium text-asmbv-red hover:text-asmbv-red-dark" %>
  </div>
</div>
