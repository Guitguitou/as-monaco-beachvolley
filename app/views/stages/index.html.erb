<div class="max-w-5xl mx-auto">
  <h1 class="text-2xl font-bold mb-4">Stages</h1>

  <% if @current_or_next %>
    <div class="mb-8 bg-white p-4 rounded-xl border shadow-sm">
      <div class="flex items-start gap-4">
        <% if @current_or_next.image.attached? %>
          <%= image_tag @current_or_next.image, class: "w-40 h-28 object-cover rounded-md" %>
        <% else %>
          <div class="w-40 h-28 bg-gray-100 rounded-md flex items-center justify-center text-gray-400">
            <%= lucide_icon('flag') %>
          </div>
        <% end %>
        <div class="flex-1">
          <div class="text-sm text-gray-500">À l'affiche</div>
          <h2 class="text-xl font-semibold text-gray-900">
            <%= link_to @current_or_next.title, stage_path(@current_or_next), class: "hover:underline" %>
          </h2>
          <div class="text-gray-700 mt-1"><%= l @current_or_next.starts_on, format: :long %> — <%= l @current_or_next.ends_on, format: :long %></div>
          <% if @current_or_next.main_coach || @current_or_next.assistant_coach %>
            <div class="text-gray-700 text-sm mt-1">
              <%= [@current_or_next.main_coach&.full_name, @current_or_next.assistant_coach&.full_name].compact.join(" / ") %>
            </div>
          <% end %>
          <% if @current_or_next.description.present? %>
            <p class="text-sm text-gray-600 mt-2 line-clamp-2"><%= @current_or_next.description %></p>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>

  <% if @others.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <% @others.each do |stage| %>
        <div class="bg-white p-4 rounded-xl border shadow-sm">
          <div class="flex items-start gap-4">
            <% if stage.image.attached? %>
              <%= image_tag stage.image, class: "w-32 h-24 object-cover rounded-md" %>
            <% else %>
              <div class="w-32 h-24 bg-gray-100 rounded-md flex items-center justify-center text-gray-400">
                <%= lucide_icon('flag') %>
              </div>
            <% end %>
            <div class="flex-1">
              <h3 class="text-lg font-semibold text-gray-900">
                <%= link_to stage.title, stage_path(stage), class: "hover:underline" %>
              </h3>
              <div class="text-gray-700 mt-1 text-sm"><%= l stage.starts_on, format: :long %> — <%= l stage.ends_on, format: :long %></div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-gray-600">Aucun autre stage pour le moment.</div>
  <% end %>
</div>
